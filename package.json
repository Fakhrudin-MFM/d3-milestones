{
  "name": "milestones",
  "version": "1.0.0-alpha5",
  "description": "A d3 based timeline visualization.",
  "keywords": [
    "d3",
    "visualization",
    "timeline"
  ],
  "main": "build/milestones.js",
  "module": "build/milestones.js",
  "homepage": "https://github.com/elastic/milestones",
  "repository": {
    "type": "git",
    "url": "https://github.com/elastic/milestones.git"
  },
  "bugs": {
    "url": "https://github.com/elastic/milestones/issues"
  },
  "license": "Apache-2.0",
  "contributors": [
    "Walter Rafelsberger <walter.rafelsberger@elastic.co>"
  ],
  "private": true,
  "dependencies": {
    "d3-array": "^1.2.0",
    "d3-collection": "^1.0.4",
    "d3-scale": "^1.0.6",
    "d3-selection": "^1.1.0",
    "d3-time-format": "^2.0.5"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "catw": "^1.0.1",
    "eslint": "^3.8.1",
    "eslint-config-es5": "^0.5.0",
    "http-server": "^0.9.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-rollup-preprocessor": "^5.0.1",
    "karma-tap": "^3.1.1",
    "karma-tap-pretty-reporter": "^3.0.5",
    "less": "^2.7.1",
    "rollup": "^0.50.0",
    "rollup-plugin-buble": "^0.16.0",
    "rollup-plugin-commonjs": "^8.0.0",
    "rollup-plugin-node-builtins": "^2.0.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-watch": "^2.5.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "tape-run": "^2.1.4",
    "uglify-js": "2"
  },
  "scripts": {
    "start": "http-server",
    "pretest": "browserify test/tape.js --standalone tape -o build/tape.js",
    "watch": "rm -rf build && mkdir build && rollup -c --watch | npm run watch-css | http-server",
    "test": "karma start karma.config.js",
    "test-watch": "karma start karma.config.js --auto-watch --no-single-run",
    "build-css": "lessc src/styles/styles.less > build/milestones.css",
    "watch-css": "catw -w 'src/styles/**/*.less' -c 'npm run build-css'",
    "prepublish": "npm run test && uglifyjs build/milestones.js -c -m -o build/milestones.min.js && npm run build-css",
    "postpublish": "zip -j build/milestones.zip -- LICENSE README.md build/milestones.css build/milestones.js build/milestones.min.js"
  }
}
